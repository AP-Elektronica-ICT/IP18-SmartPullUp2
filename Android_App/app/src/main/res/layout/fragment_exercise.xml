<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">


            <ProgressBar
                style="?android:progressBarStyleHorizontal"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:max="1"
                android:min="0"
                android:progress="1"
                android:progressDrawable="@drawable/main_halfcircularprogressbar_outside_bg"
                android:rotation="180" />
<!--
            <ProgressBar
                style="?android:progressBarStyleHorizontal"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:max="1"
                android:progress="1"
                android:progressBackgroundTint="@color/LightGrey"
                android:progressDrawable="@drawable/main_halfcircularprogressbar_inside_bg"
                android:rotation="180" />
-->
            <ProgressBar
                android:id="@+id/progress_pullups"
                style="?android:progressBarStyleHorizontal"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/main_halfcircularprogressbar_outside"
                android:rotation="90"
                android:background="@drawable/shadow_prog_bar"/>
<!--
            <ProgressBar
                android:id="@+id/progress_calories"
                style="?android:progressBarStyleHorizontal"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/main_halfcircularprogressbar_inside"
                android:rotation="180" />
-->

            </RelativeLayout>

            <TextView
                android:id="@+id/TypeMesurament_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:text="Type"
                android:textAlignment="center"
                android:textSize="15sp" />
-->
            <TextView
                android:id="@+id/weight_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TypeMesurament_textView"
                android:layout_centerHorizontal="true"
                android:text="Weight"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pullUpCounter_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="0"
                android:textAlignment="center"
                android:textSize="100sp" />

        </RelativeLayout>

        <com.hookedonplay.decoviewlib.DecoView
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            custom:dv_lineWidth="26dp"
            android:id="@+id/dynamicArcView"
            android:layout_width="match_parent"
            android:layout_height="350dp" />



        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dynamicArcView"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="5dp">

            <RelativeLayout
                android:id="@+id/layout_progress2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:elevation="80dp">

                    <TextView
                        android:id="@+id/txt_PullupSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:text="speed"/>

                    <TextView
                        android:id="@+id/txt_PullupAverageSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:layout_below="@id/txt_PullupSpeed"
                        android:text="avg speed"/>

                    <TextView
                        android:id="@+id/txt_TotalTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:layout_below="@id/txt_PullupAverageSpeed"
                        android:text="duration"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>

</ScrollView>