<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/ExerciseLayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Connect"
        android:id="@+id/btn_Connect_Bar"
        android:onClick="ConnectToBar"/>

    <RelativeLayout
        android:id="@+id/layout_progress"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_below="@+id/btn_Connect_Bar"
        android:layout_centerHorizontal="true">

        <ProgressBar
            style="?android:progressBarStyleHorizontal"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:max="1"
            android:progress="1"
            android:progressDrawable="@drawable/main_halfcircularprogressbar_outside_bg"
            android:rotation="180" />

        <ProgressBar
            style="?android:progressBarStyleHorizontal"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:max="1"
            android:progress="1"
            android:progressBackgroundTint="@color/LightGrey"
            android:progressDrawable="@drawable/main_halfcircularprogressbar_inside_bg"
            android:rotation="180" />

        <ProgressBar
            android:id="@+id/progress_pullups"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:max="100"
            android:progress="27"
            android:progressDrawable="@drawable/main_halfcircularprogressbar_outside"
            android:rotation="180" />

        <ProgressBar
            android:id="@+id/progress_calories"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/main_halfcircularprogressbar_inside"
            android:rotation="180" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="81dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="15sp"
            android:id="@+id/TypeMesurament_textView" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/TypeMesurament_textView"
            android:layout_below="@+id/TypeMesurament_textView"
            android:textAlignment="center"
            android:textSize="15sp"
            android:id="@+id/machien_ID_textView" />

        <TextView
            android:id="@+id/down_Counter_textView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/machien_ID_textView"
            android:layout_marginBottom="87dp"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/weight_textView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/down_Counter_textView"
            android:layout_alignStart="@+id/down_Counter_textView"
            android:textAlignment="center"
            android:textSize="15sp" />


    </RelativeLayout>


    <TextView
        android:id="@+id/pullUpCounter_textView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-220dp"
        android:layout_below="@id/layout_progress"
        android:text="0"
        android:textAlignment="center"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/txt_PullupSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@id/layout_progress"
        android:text="speed"/>

    <TextView
        android:id="@+id/txt_PullupAverageSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@id/txt_PullupSpeed"
        android:text="avg speed"/>

    <TextView
        android:id="@+id/txt_TotalTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@id/txt_PullupAverageSpeed"
        android:text="duration"/>
<!--
    <Button
        android:id="@+id/test_pullup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="pullup"/>
-->
    <TextView
        android:id="@+id/testView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/sensorView0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/textView_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/testView1"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/textView_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_up"
        android:textSize="20dp"/>


</RelativeLayout>